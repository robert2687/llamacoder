{pkgs}: {
  packages = [
    pkgs.nodejs_20
  ];
  idx.extensions = [
    "ms-vercel.vercel"
  ];
  idx.previews = {
    previews = {
      web = {
        command = [
          "npm"
          "run"
          "dev"
          "--"
          "--port"
          "$PORT"
          "--hostname"
          "0.0.0.0"
        ];
        manager = "web";
      };
    };
  };
}